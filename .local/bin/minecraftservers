#!/bin/sh

server_path="/mnt/data/servers/minecraft/"
script_name="start.sh"
servers="Elsa1.16.5"

for server in $servers; do
    server_directory="$server_path/$server"
    start_script="$server_directory/$script_name"
    [ -f "$start_script" ] &&
        screen -ls | grep -q "minecraft-$server" ||
        screen -S "minecraft-$server" -d -m "$start_script"
done
